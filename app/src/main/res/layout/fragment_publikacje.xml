<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.publikacje.PublikacjeFragment" android:orientation="vertical">
        <TextView
                android:text="Potrząśnij i wylosuj publikacje!"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView"
                android:textAlignment="center" android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/blue_200"/>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/framePublikacja"
                android:layout_marginStart="12dp" android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp">

        </FrameLayout>
    </LinearLayout>
</ScrollView>
