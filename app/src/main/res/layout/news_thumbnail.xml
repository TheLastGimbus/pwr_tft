<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"

              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="vertical"
              android:background="#7f7f7f7f"
              android:layout_margin="8dp">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/tft_logo" android:id="@+id/thumbnailImage"
            android:layout_weight="1"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/title" android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/date" android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
    <Button
            android:text="Visit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonOpen" android:layout_weight="1"/>

</LinearLayout>